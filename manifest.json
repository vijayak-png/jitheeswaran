{
  "manifest_version": 3,
  "name": "Fake News Extension",
  "version": "1.0",
  "description": "Check news credibility and generate reports",
  "permissions": ["activeTab", "http://localhost/*", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
